<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_work_centre_production_tree" model="ir.ui.view">
        <field name="name">work.centre.production.tree</field>
        <field name="model">work.centre.production</field>
        <field name="arch" type="xml">
            <tree string="Work Centre Production">
                <field name="id"/>
                <field name="operation_name"/>
                <field name="line_id"/>
                <field name="time_from"/>
                <field name="time_to"/>
                <field name="product_id"/>
                <field name="planned_qty"/>
                <field name="out_qty"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_work_centre_production_search" model="ir.ui.view">
        <field name="name">work.centre.production.search</field>
        <field name="model">work.centre.production</field>
        <field name="arch" type="xml">
            <search string="Work Centre Production">
                <field name="operation_name"/>
                <field name="line_id"/>
                <field name="product_id"/>
                <filter name="planned_qty_gt_0" string="Planned Qty > 0" domain="[('planned_qty','>',0)]"/>
                <filter name="out_qty_gt_0" string="Out Qty > 0" domain="[('out_qty','>',0)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_work_centre_production" model="ir.actions.act_window">
        <field name="name">Work Centre Production</field>
        <field name="res_model">work.centre.production</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_work_centre_production_search"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_work_centre_production_root"
              name="Work Centre Production"
              action="action_work_centre_production"
              parent="menu_operation_section"/>
</odoo>
