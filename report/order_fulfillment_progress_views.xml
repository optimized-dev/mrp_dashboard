<odoo>
    <record id="view_order_fulfillment_progress_tree" model="ir.ui.view">
        <field name="name">order.fulfillment.progress.tree</field>
        <field name="model">order.fulfillment.progress</field>
        <field name="arch" type="xml">
            <tree string="Order Fulfillment Progress">
                <field name="sale_order"/>
                <field name="customer"/>
                <field name="product"/>
                <field name="ordered_qty"/>
                <field name="delivery_due_date"/>
                <field name="order_start"/>
                <field name="order_finish"/>
                <field name="forecast_qty_on_due_date"/>
                <field name="shortage_or_balance"/>
                <field name="qty_to_produce"/>
                <field name="progress_percent"/>
                <field name="remaining_days"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="action_order_fulfillment_progress" model="ir.actions.act_window">
        <field name="name">Order Fulfillment Progress</field>
        <field name="res_model">order.fulfillment.progress</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_order_fulfillment_progress"
              name="Order Fulfillment Progress"
              parent="menu_operation_section"
              action="action_order_fulfillment_progress"/>
</odoo>
