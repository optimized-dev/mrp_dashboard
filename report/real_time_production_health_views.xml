<odoo>
    <!-- Tree (List) View -->
    <record id="view_real_time_production_health_tree" model="ir.ui.view">
        <field name="name">real.time.production.health.tree</field>
        <field name="model">real.time.production.health</field>
        <field name="arch" type="xml">
            <tree string="Real Time Production Health">
                <field name="product_id"/>
                <field name="machine_name"/>
                <field name="shift_start"/>
                <field name="shift_end"/>
                <field name="production_scheduled_time"/>
                <field name="downtime_min"/>
                <field name="uptime_min"/>
                <field name="good_units"/>
                <field name="wastages"/>
                <field name="total_units"/>
                <field name="availability_percent"/>
                <field name="performance_percent"/>
                <field name="quality_percent"/>
                <field name="oee_percent"/>
                <field name="quick_view"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_real_time_production_health" model="ir.actions.act_window">
        <field name="name">Production Health</field>
        <field name="res_model">real.time.production.health</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_real_time_production_health_root"
              name="Production Health"
              parent="menu_operation_section"
              action="action_real_time_production_health"/>
</odoo>
