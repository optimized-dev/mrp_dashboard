<odoo>
<record id="view_order_priority_queue_tree" model="ir.ui.view">
        <field name="name">order.priority.queue.tree</field>
        <field name="model">order.priority.queue</field>
        <field name="arch" type="xml">
            <tree string="Order Priority Queue" default_order="delivery_due_date asc, priority desc, profitability_score desc">
                <field name="order_no"/>
                <field name="product_name"/>
                <field name="order_qty"/>
                <field name="delivery_due_date"/>
                <field name="priority"/>
                <field name="customer"/>
                <field name="profitability_score"/>
            </tree>
        </field>
    </record>

    <record id="action_order_priority_queue" model="ir.actions.act_window">
        <field name="name">Order Priority Queue</field>
        <field name="res_model">order.priority.queue</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_order_priority_queue"
              name="Order Priority Queue"
              parent="menu_widget_configuration_root"
              action="action_order_priority_queue" sequence="0"/>

</odoo>
