<odoo>
    <record id="view_recovery_ratio_history_tree" model="ir.ui.view">
        <field name="name">recovery.ratio.history.tree</field>
        <field name="model">recovery.ratio.history</field>
        <field name="arch" type="xml">
            <tree string="Recovery Ratio History">
                <field name="planning_date"/>
                <field name="production_stage_id"/>
                <field name="product_id"/>
                <field name="planning_id"/>
                <field name="actual_qty"/>
                <field name="raw_material_input_qty"/>
                <field name="recovery_ratio"/>
                <field name="usable_finished_goods"/>
                <field name="standard_yield"/>
                <field name="loss_quantity"/>
                <field name="loss_percen"/>
            </tree>
        </field>
    </record>

    <record id="view_recovery_ratio_history_graph" model="ir.ui.view">
        <field name="name">recovery.ratio.history.graph</field>
        <field name="model">recovery.ratio.history</field>
        <field name="arch" type="xml">
            <graph string="Recovery Ratio Analysis" type="bar">
                <field name="product_id" type="row"/>
                <field name="recovery_ratio" type="measure"/>
                <field name="standard_yield" type="measure"/>
                <field name="loss_percen" type="measure"/>
            </graph>
        </field>
    </record>

    <menuitem id="menu_recovery_ratio_history_root" name="Production Analysis"/>

    <record id="action_recovery_ratio_history" model="ir.actions.act_window">
        <field name="name">Recovery Ratio History</field>
        <field name="res_model">recovery.ratio.history</field>
        <field name="view_mode">tree,graph,pivot</field>
    </record>

    <menuitem id="menu_recovery_ratio_history"
              name="Recovery Ratios"
              parent="menu_analysis_section"
              action="action_recovery_ratio_history"/>
</odoo>
