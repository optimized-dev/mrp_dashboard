    <record id="view_widget_configuration_tree" model="ir.ui.view">
        <field name="name">widget.configuration.tree</field>
        <field name="model">widget.configuration</field>
        <field name="arch" type="xml">
            <tree string="Widget Configurations" editable="bottom">
                <field name="name"/>
                <field name="no_of_days"/>
                <field name="widget"/>
                <button name="get_data" type="object" string="Get Upcoming Production Schedule" class="oe_highlight"/>
            </tree>
        </field>
    </record>

