        <field name="name">Widget Configurations</field>
        <field name="res_model">widget.configuration</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Optional: Menu item to access it -->
    <menuitem id="menu_widget_configuration_root" name="Widget Configurations" parent="mrp.menu_mrp_configuration"/>
    <menuitem id="menu_planning_section" name="Planning Related Views" parent="mrp.menu_mrp_configuration"/>
    <menuitem id="menu_operation_section" name="Operation Related Views" parent="mrp.menu_mrp_configuration"/>
